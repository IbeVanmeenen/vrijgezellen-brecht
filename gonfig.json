{
    "showErrorNotifications": true,

    "vars": {
        "distPath": "dist/",
        "resourcesPath": "app/"
    },

    "scss": "<=resourcesPath>scss/**/*.scss",
    "img": "<=resourcesPath>img/**/*.{png,jpg,jpeg,gif,svg,webp}",
    "video": "<=resourcesPath>video/**/*.{webm,mp4}",

    "js": {
        "vendors": [
            "<=bowerComponentsPath>"
        ],
        "app": [
            "<=resourcesPath>js/_scope.js",
            "<=resourcesPath>js/components/*.js",
            "<=resourcesPath>js/app.js"
        ],
        "other": "<=resourcesPath>js/other/*.js"
    },

    "dist": {
        "css": "<=distPath>css",
        "js": "<=distPath>js",
        "img": "<=distPath>img",
        "video": "<=distPath>video",
        "templates": "<=distPath>"
    },

    "browserSupport": [
        "last 2 versions",
        "ie 9-11"
    ],

    "liveReloadFiles": [
        "<=distPath>css/style.min.css",
        "<=distPath>js/*.js"
    ]
}
